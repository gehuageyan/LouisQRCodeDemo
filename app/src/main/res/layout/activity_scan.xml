<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.louisgeek.louisqrcodedemo.MainActivity">

    <cn.bingoogolapple.qrcode.zxing.ZXingView
        android:id="@+id/id_zv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:qrcv_animTime="500"
        app:qrcv_borderColor="@android:color/white"
        app:qrcv_borderSize="1dp"
        app:qrcv_cornerColor="#449526"
        app:qrcv_cornerLength="25dp"
        app:qrcv_cornerSize="5dp"
        app:qrcv_maskColor="#33FFFFFF"
        app:qrcv_rectWidth="200dp"
        app:qrcv_scanLineColor="#449526"
        app:qrcv_scanLineSize="2dp"
        app:qrcv_topOffset="100dp" />
</RelativeLayout>
